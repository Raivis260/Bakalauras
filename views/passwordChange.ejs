<html lang="en" dir="ltr">

<head>
  <link href="https://fonts.googleapis.com/css2?family=Montserrat:wght@300;500;600;900&family=Ubuntu:wght@300;500;700&display=swap" rel="stylesheet">
  <link rel="stylesheet" href="/css/homeStyles.css">
  <link rel="stylesheet" href="/css/pages.css">
  <meta charset="utf-8">
  <title>Bidit</title>

</head>

<body>
  <%- include ("./partials/header") -%>

  <div class="container">
    <p><%- include ("./partials/messages") -%> </p>
    <h1>Naujas slaptažodis</h1>
    <form class="mt-3" action="/users/edit/pswChange" method="post">
      <div class="form-group row">
        <label for="userInputEmail" class="col-sm-2 col-form-label">Naujas slaptažodis</label>
        <div class="col-sm-10">
          <input type="password" class="form-control" id="userPassword" name="userPassword">
        </div>
      </div>
      <div class="form-group row">
        <label for="userInputEmail" class="col-sm-2 col-form-label">Pakartokite naują slaptažodį</label>
        <div class="col-sm-10">
          <input type="password" class="form-control" id="confirmPassword" name="confirmPassword">
        </div>
      </div>
      <div class="form-group row">
        <button class="btn btn-outline-warning btn-block" type="submit">Išsaugoti</button>
      </div>
    </form>
  </div>


  <%- include ("./partials/footer") -%>


</body>
