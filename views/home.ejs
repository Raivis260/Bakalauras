<!DOCTYPE html>
<html lang="en" dir="ltr">

<head>
  <link href="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-Vkoo8x4CGsO3+Hhxv8T/Q5PaXtkKtu6ug5TOeNV6gBiFeWPGFN9MuhOf23Q9Ifjh" crossorigin="anonymous">
  <link href="https://fonts.googleapis.com/css2?family=Montserrat:wght@300;500;600;900&family=Ubuntu:wght@300;500;700&display=swap" rel="stylesheet">
  <link rel="stylesheet" href="/css/homeStyles.css">
  <meta charset="utf-8">
  <title>Bidit</title>

  <script defer src="https://use.fontawesome.com/releases/v5.0.7/js/all.js"></script>
</head>

<body>

  <section id="title">
    <div class="container-fluid">
      <nav class="navbar navbar-expand-sm navbar-light">
        <a class="navbar-brand" href="/">bidit</a>
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavAltMarkup" aria-controls="navbarTogglerDemo02" aria-expanded="false" aria-label="Toggle navigation">
          <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarNavAltMarkup">
          <ul class="navbar-nav ml-auto">
            <% if(isAuthenticated) { %>
            <li class="nav-item">
              <a class="nav-link" href="#footer">Contacts</a>
            </li>
            <li class="nav-item">
              <a class="nav-link" href="/users/logout">Logout</a>
            </li>
            <li class="nav-item dropdown">
              <a href="#" class="nav-link dropdown-toggle" data-toggle="dropdown">My Profile </a>
              <div class="dropdown-menu">
                <a href="#" class="dropdown-item">List</a>
                <a href="/products/add/add-product" class="dropdown-item">Add product</a>
                <a href="#" class="dropdown-item">History</a>
              </div>
            </li>
            <% } else { %>
            <li class="nav-item">
              <a class="nav-link" href="#footer">Contacts</a>
            </li>
            <li class="nav-item">
              <a class="btn btn-dark" href="/users/register">Register</a>
            </li>
            <%  } %>
          </ul>
        </div>
      </nav>
      <%- include ("./partials/messages") -%>
      <div class="row">
        <div class="col-4">
          <h1>Get your bid! Time is ticking!</h1>
          <% if(!isAuthenticated) { %>
          <a href="/users/login" class="btn btn-outline-dark btn-lg btn-login">Login Here!</a>
          <% } %>
        </div>
      </div>
    </div>
  </section>

  <section id="items">
    <div class="container-fluid">
      <div class="row">
        <div class="col">
          <div class="input-group mb-3">
            <input class="form-control mr-sm-2" type="search" placeholder="Search" aria-label="Search">
            <div class="input-group-append">
              <button class="btn btn-outline-dark my-2 my-sm-0" type="submit"><i class="fas fa-search"></i></button>
            </div>
          </div>
            <div class="input-group mb-3">
              <div class="input-group-prepend">
                <label class="input-group-text btn-dark" for="inputGroupSelect01">City</label>
              </div>
              <select class="custom-select" id="citySelect" onChange="location = this.value;">
                <option value ='/?'>All</option>
                <option value="/?city=Vilnius">Vilnius</option>
                <option value="/?city=Kaunas">Kaunas</option>
                <option value="/?city=Alytus">Alytus</option>
              </select>
            </div>
          <div class="input-group mb-3">
            <div class="input-group-prepend">
              <label class="input-group-text  btn-dark" for="inputGroupSelect02">Type</label>
            </div>
            <form class="" action="/home" method="post">
              <select class="custom-select" id="inputGroupSelect01">
                <option selected>All</option>
                <option value="1">One</option>
                <option value="2">Two</option>
                <option value="3">Three</option>
              </select>
            </form>

          </div>
          <div class="input-group mb-3">
            <div class="input-group-prepend">
              <label class="input-group-text  btn-dark" for="inputGroupSelect03">Started</label>
            </div>
            <select class="custom-select" id="inputGroupSelect01">
              <option selected>All</option>
              <option value="1">One</option>
              <option value="2">Two</option>
              <option value="3">Three</option>
            </select>
          </div>
          <div class="input-group mb-3">
            <div class="input-group-prepend">
              <label class="input-group-text  btn-dark" for="inputGroupSelect04">Ending</label>
            </div>
            <select class="custom-select" id="inputGroupSelect01">
              <option selected>All</option>
              <option value="1">One</option>
              <option value="2">Two</option>
              <option value="3">Three</option>
            </select>
          </div>
        </div>
        <div class="col-9">
          <div class="row">
            <% for (let i=0; i<items.length; i++) { %>
            <div class="col-lg-3 col-md-4 m-3 product-grid">
              <div class="image">
                <a href="/products/<%=items[i]._id %>">
                  <img src="<%=items[i].image%>" class="w-100">
                  <div class="overlay">
                    <div class="detail">
                      View details
                    </div>
                  </div>
                </a>
              </div>
              <h4 class="text-center"><%=items[i].name %></h4>
              <h5><%=items[i].price %> â‚¬</h5>
              <p> <%=items[i].startTime%> </p>
              <p> <%=items[i].city %> </p>
              <a href="/products/<%=items[i]._id %>" class="btn btn-lg btn-block btn-outline-dark">Open</a>
            </div>
            <%  }; %>
          </div>
        </div>
      </div>
    </div>
  </section>


  <%- include ("./partials/footer") -%>

</body>

</html>
