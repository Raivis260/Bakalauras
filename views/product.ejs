<!DOCTYPE html>
<html lang="en" dir="ltr">

<head>
  <link href="https://fonts.googleapis.com/css2?family=Montserrat:wght@300;500;600;900&family=Ubuntu:wght@300;500;700&display=swap" rel="stylesheet">
  <link rel="stylesheet" href="/css/homeStyles.css">
  <link rel="stylesheet" href="/css/pages.css">
  <meta charset="utf-8">
  <title>Bidit</title>

</head>

<body>
  <%- include ("./partials/header") -%>
  <section id="product">
    <div class="container-fluid">
      <div class="container">
        <%- include ("./partials/messages") -%>
        <div class="row">
          <div class="col-8">
            <div id="carouselExampleIndicators" class="carousel slide" data-ride="carousel" data-interval=false>
              <ol class="carousel-indicators">
                <li data-target="#carouselExampleIndicators" data-slide-to="0" class="active"></li>
                <li data-target="#carouselExampleIndicators" data-slide-to="1"></li>
                <li data-target="#carouselExampleIndicators" data-slide-to="2"></li>
              </ol>
              <div class="carousel-inner">
                <div class="carousel-item active">
                  <img src="../<%=product.image[0] %>" class="d-block w-100" alt="Product image">
                </div>
                <% for(let i=1; i<product.image.length; i++) { %>
                <div class="carousel-item">
                  <img src="../<%=product.image[i] %>" class="d-block w-100" alt="Product image">
                </div>
                <%  } %>
              </div>
              <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
                <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                <span class="sr-only">Previous</span>
              </a>
              <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
                <span class="carousel-control-next-icon" aria-hidden="true"></span>
                <span class="sr-only">Next</span>
              </a>
            </div>
            <div class="p-3 mb-2 bg-light border">
              <p class="description"><%=product.description %> </p>
            </div>
          </div>
          <div class="col-4">
            <form action="/products/<%=product._id %>/bid" method="post">
              <div class="product_controls">
                <form class="" action="/products/<%=product._id %>/quick-bid" method="post">
                  <div class="quick-bid">
                    <h5>Greitas siūlymas</h5>
                    <button name="Btn1Rise" class="btn btn-outline-dark my-2 btn-lg" type="submit" value="<%=product.price + 50%>">€<%=product.price + 50%></button>
                    <button name="Btn2Rise" class="btn btn-outline-dark my-2 btn-lg" type="submit" value="<%=product.price + 100%>">€<%=product.price + 100%></button>
                    <button name="Btn3Rise" class="btn btn-outline-dark my-2 btn-lg" type="submit" value="<%=product.price + 200%>">€<%=product.price + 200%></button>
                  </div>
                </form>
                <div class="price p-2">
                  <h4>Dabartinė kaina: €<price:><%=product.price %></price:>
                  </h4>
                </div>
                <div class="price-input">
                  <input name="priceInput" class="priceInput" type="number" placeholder="Siūlykite savo kainą" aria-label="Bid">
                  <button class="btn btn-outline-dark my-3 btn-lg btn-block " type="submit">Siūlyti</button>
                </div>
                <span><%= product.city %></span>
              </div>
            </form>
            <form class="" action="/products/<%=product._id%>/add-to-list" method="post">
              <button class="btn btn-outline-dark my-2 my-sm-0 btn-block mt-8" type="submit" name="favouriteButton">Pridėti prie mėgstamų sąrašo</button>
            </form>
            <div class="time">
              <table class="countdownContainer">
                <tr class="info">
                  <td colspan="4">Iki aukciono pabaigos liko:</td>
                </tr>
                <tr class="info">
                  <td name="days">7</td>
                  <td name="hours">4</td>
                  <td name="minutes">12</td>
                  <td name="seconds">22</td>
                </tr>
                <tr>
                  <td>Dienos</td>
                  <td>Valandos</td>
                  <td>Minutės</td>
                  <td>Sekundės</td>
                </tr>
              </table>
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>

  <section id="review">

    <form action="/products/<%=product._id %>" method="post">
      <div class="container">
        <h2>Komentarai</h2>
        <% if(isAuthenticated) { %>
        <textarea class="w-100" type="text" name="commentText"></textarea>
        <button class="btn btn-outline-dark btn-block" type="submit" name="reviewSubmit">Skelbti</button>
        <% } %>
        <% for(let i=0; i<product.comments.length; i++) { %>
            <div class="comment-row mt-3">
              <div class="commentUser">
                <p>Naudotojas</p>
              </div>
              <div class="commentText">
                <p><%=product.comments[i].message %></p>
              </div>
            </div>
            <% } %>
      </div>
    </form>
  </section>
  </div>
  </div>
  </div>

  <%- include ("./partials/footer") -%>
  <script src="https://code.jquery.com/jquery-3.4.1.slim.min.js" integrity="sha384-J6qa4849blE2+poT4WnyKhv5vZF5SrPo0iEjwBvKU7imGFAV0wwj1yYfoRSJoZ+n" crossorigin="anonymous"></script>
  <script type="text/javascript" src="../jquery/timer.js"></script>
</body>




</html>
